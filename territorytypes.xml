      <towerlevel level="4"
                  decaydays="4"
                  guardbuff="MOB_TERRITORY_GUARD_BUFF_03"
                  yieldbonus="0.07"
                  pointboostermultiplier="1.30"
                  enchantedresourcemultiplier="1.3"
                  bonuslootlist="CRYSTALLEAGUE_LOOT_TERRITORY_LVL4"/>
      <towerlevel level="5"
                  decaydays="8"
                  guardbuff="MOB_TERRITORY_GUARD_BUFF_04"
                  yieldbonus="0.10"
                  pointboostermultiplier="1.40"
                  enchantedresourcemultiplier="1.4"
                  bonuslootlist="CRYSTALLEAGUE_LOOT_TERRITORY_LVL5"/>
      <towerlevel level="6"
                  decaydays="15"
                  guardbuff="MOB_TERRITORY_GUARD_BUFF_05"
