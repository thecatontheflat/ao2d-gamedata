                  decaydays="4"
                  guardbuff="MOB_TERRITORY_GUARD_BUFF_01"
                  yieldbonus="0.02"
                  pointboostermultiplier="1.10"
                  enchantedresourcemultiplier="1.1"/>
      <towerlevel level="3"
                  decaydays="4"
                  guardbuff="MOB_TERRITORY_GUARD_BUFF_02"
                  yieldbonus="0.05"
                  pointboostermultiplier="1.20"
